                                                         Focusable="{TemplateBinding Focusable}"
                                                         FontFamily="{TemplateBinding FontFamily}"
                                                         FontSize="{TemplateBinding FontSize}" Margin="0,-2,0,0"
                                                         Foreground="Black" />
                            <DatePickerTextBox Visibility="Visible" x:Name="PART_TextBox" Grid.Column="0"
                                               Foreground="{TemplateBinding Foreground}"
                                               Focusable="{TemplateBinding Focusable}"
                                               HorizontalContentAlignment="Stretch" Grid.Row="0"
                                               VerticalContentAlignment="Stretch" SelectionBrush="#00FF0000"
                                               Style="{DynamicResource MetroDatePickerTextBox}" Panel.ZIndex="-50"
                                               Opacity="0" />
                            <TextBox Visibility="Collapsed" x:Name="PART_TextBoxDisplay2" Grid.Column="0"
