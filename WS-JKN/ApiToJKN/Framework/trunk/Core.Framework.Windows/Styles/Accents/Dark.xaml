<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="HighlightDarkColor">#3F3F3F</Color>
    <Color x:Key="HighlightLightColor">#3F3F3F</Color>

    <Color x:Key="AccentDarkColor">#FF3F3F3F</Color>
    <Color x:Key="AccentContrastColor">#FF3F3F3F</Color>

    <Color x:Key="AccentColor">#3F3F3F</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#5E5E5E</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#5E5E5E</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#6E6F6D</Color>

    <Color x:Key="AccentColorGreenPoladot">#FF799C37</Color>
    
    <LinearGradientBrush x:Key="BrandingBrush" 
                         EndPoint="0.001,0.5" 
                         StartPoint="1.002,0.5">
        <GradientStop Color="{DynamicResource HighlightDarkColor}" 
                      Offset="0" />
        <GradientStop Color="#FF98370F" 
                      Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="AccentColorBrush"
                     Color="{StaticResource AccentContrastColor}" />

    <SolidColorBrush x:Key="AccentSelectedColorBrush"
                     Color="#FFE0DCDC" />
    <Color x:Key="IdealForegroundColor">White</Color>
    <SolidColorBrush x:Key="IdealForegroundColorBrush" Color="{StaticResource IdealForegroundColor}"/>
</ResourceDictionary>