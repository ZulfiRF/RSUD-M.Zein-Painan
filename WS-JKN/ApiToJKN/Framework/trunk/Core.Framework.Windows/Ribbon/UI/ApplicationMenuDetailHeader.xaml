<UserControl x:Class="Core.Framework.Windows.Ribbon.UI.ApplicationMenuDetailHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:Core.Framework.Windows.Ribbon.UI" mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" MinHeight="40" MinWidth="250">
    <Grid>
    	<TextBlock x:Name="LbTitle" FontSize="24" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=ui:RibbonWindow}}" VerticalAlignment="Top" Margin="0,0,0,5"></TextBlock>
    	<Rectangle VerticalAlignment="Bottom" MinHeight="5" Fill="{Binding AccentBrush, RelativeSource={RelativeSource FindAncestor, AncestorType=ui:RibbonWindow}}" Margin="0,0,10,3"/>
            
    </Grid>
</UserControl>
