<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Core.Framework.Windows.Implementations"
    x:Class="Core.Framework.Windows.Implementations.ContentInputDialog"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300" Width="400" Height="141">
    <Grid Background="White">

        <local:CoreButton x:Name="BtnYes" Content="OK" HorizontalAlignment="Right" Width="52.5"
                          VerticalAlignment="Bottom" Margin="0,0,63,5">
            <local:CoreButton.Background>
                <SolidColorBrush Color="{DynamicResource AccentColor}" />
            </local:CoreButton.Background>
        </local:CoreButton>
        <local:CoreButton x:Name="BtnNo" Content="Batal" HorizontalAlignment="Right" Width="52.5"
                          VerticalAlignment="Bottom" Margin="0,0,6.5,5">
            <local:CoreButton.Background>
                <SolidColorBrush Color="#CCFF0000" />
            </local:CoreButton.Background>
        </local:CoreButton>
        <ScrollViewer Margin="5,5,5,34" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid Background="#FFE0E0E0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TbTitleMessage" HorizontalAlignment="Center" TextWrapping="Wrap"
                           VerticalAlignment="Center" />
                    <local:CoreTextBox TextAlignment="Center" Width="350" x:Name="TbInputMessage" HorizontalAlignment="Center" Height="25" Margin="0,10,0,0"/>
                </StackPanel>                
            </Grid>

        </ScrollViewer>

    </Grid>
</UserControl>